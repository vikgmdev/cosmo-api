{
  "name": "cosmo-api",
  "version": "1.0.0",
  "description": "Tortuga Descalza API",
  "main": "dist/index.js",
  "scripts": {
    "compile": "tsc",
    "lint": "eslint . --max-warnings=0 --ext .js,.ts --ignore-path .gitignore --ignore-pattern '!.eslintrc.js' --ignore-pattern '!.prettierrc.js'",
    "start": "nodemon -r ts-node/register/transpile-only src/index.ts | pino-pretty",
    "start-seed": "nodemon -r ts-node/register/transpile-only src/index.ts seed | pino-pretty",
    "start-debug": "nodemon -r ts-node/register/transpile-only --inspect src/index.ts"
  },
  "author": "Victor Garcia @vikgmdev vikgm.dev@gmail.com",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,js,json,md,ts,yaml,yml}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,ts}": "npm run lint"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv-safe": "^8.2.0",
    "ejs": "^3.0.2",
    "express": "^4.17.1",
    "geo-tz": "^6.0.0",
    "http-status-codes": "^1.4.0",
    "jsonwebtoken": "^9.0.0",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.35",
    "mongoose": "^5.9.7",
    "node-uuid": "^1.4.8",
    "nodemailer": "^6.4.16",
    "pino": "^6.0.0",
    "pino-pretty": "^4.0.0",
    "ramda": "^0.27.0",
    "stripe": "^8.49.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/dotenv-safe": "^8.1.0",
    "@types/ejs": "^3.0.2",
    "@types/express": "^4.17.4",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/moment": "^2.13.0",
    "@types/moment-timezone": "^0.5.13",
    "@types/mongoose": "^5.7.8",
    "@types/node": "^13.11.0",
    "@types/node-uuid": "0.0.28",
    "@types/nodemailer": "^6.4.0",
    "@types/pino": "^5.17.0",
    "@types/ramda": "^0.27.3",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "lint-staged": "^10.1.1",
    "nodemon": "^2.0.2",
    "prettier": "^2.0.2",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3"
  }
}
