{
  "name": "tortugadescalza-api",
  "version": "1.0.0",
  "description": "Tortuga Descalza API",
  "main": "dist/index.js",
  "scripts": {
    "compile": "tsc",
    "lint": "eslint . --max-warnings=0 --ext .js,.ts --ignore-path .gitignore --ignore-pattern '!.eslintrc.js' --ignore-pattern '!.prettierrc.js'",
    "start": "nodemon -r ts-node/register/transpile-only src/index.ts | pino-pretty",
    "start-debug": "nodemon -r ts-node/register/transpile-only --inspect src/index.ts"
  },
  "author": "Victor Garcia @vikgmdev vikgm.dev@gmail.com",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,js,json,md,ts,yaml,yml}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,ts}": "npm run lint"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv-safe": "^8.2.0",
    "express": "^4.17.1",
    "http-status-codes": "^1.4.0",
    "mongoose": "^5.9.7",
    "pino": "^6.0.0",
    "pino-pretty": "^4.0.0"
  },
  "devDependencies": {
    "@types/dotenv-safe": "^8.1.0",
    "@types/express": "^4.17.4",
    "@types/mongoose": "^5.7.8",
    "@types/node": "^13.11.0",
    "@types/pino": "^5.17.0",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "lint-staged": "^10.1.1",
    "nodemon": "^2.0.2",
    "prettier": "^2.0.2",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3"
  }
}
